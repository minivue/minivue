{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./", // 解析非相对模块的基目录
    "paths": {
      // 路径映射，esbuild 支持路径别名
      "@/*": ["src/*"]
    },
    "types": ["miniprogram-api-typings", "@types/node"], // 加载的类型声明文件
    /* 输出选项 */
    "outDir": "./dist" // 指定输出目录
  },
  /* 包含和排除文件 */
  "include": ["src/**/*", "global.d.ts"], // 包含的文件或目录
  "exclude": ["node_modules", "dist"] // 排除的文件或目录
}
