{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/tsconfig.tsbuildinfo",
    "module": "ESNext",
    "noEmit": true,
    "strict": true,
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": true,
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["miniprogram-api-typings", "@types/node"],
    "target": "es2019",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "Bundler"
  },
  "include": ["./**/*.vue", "./**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
