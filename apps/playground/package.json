{
  "name": "minivue-playground",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "minivue dev",
    "build": "minivue build",
    "check": "tsc --incremental --noEmit"
  },
  "components": [
    {
      "libraryName": "@minivue/ui",
      "styleLibraryName": "@minivue/theme",
      "themes": [
        "default.css",
        "dark.css"
      ],
      "prefix": "kd"
    }
  ],
  "dependencies": {
    "@minivue/ui": "workspace:*",
    "@minivue/core": "workspace:*",
    "@minivue/theme": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "latest",
    "@minivue/cli": "workspace:*",
    "vue": "latest",
    "typescript": "latest",
    "miniprogram-api-typings": "latest"
  },
  "packageManager": "pnpm@10.3.0",
  "engines": {
    "node": ">=20.15.1"
  }
}
